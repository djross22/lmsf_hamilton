<Window x:Class="Hamilton.AswGui.SimpleTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Style="{DynamicResource HamiltonMainWindow}"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="True">

  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/HamiltonASWGUI.Resources;component/Resources/HamiltonMenu.xaml" />
        <ResourceDictionary Source="pack://application:,,,/HamiltonASWGUI.Resources;component/Resources/HamiltonWindow.xaml" />
        <ResourceDictionary Source="pack://application:,,,/HamiltonASWGUI.Resources;component/Resources/HamiltonTheme.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>

  <Grid>
    <DockPanel x:Name="ParentDockPanel">
      <Menu Margin="0,-30,60,0"
            DockPanel.Dock="Top"
            IsTabStop="True"
            VerticalAlignment="Center"
            HorizontalAlignment="Right">
        <Popup PlacementTarget="{Binding ElementName=ParentDockPanel}" />

        <MenuItem Header="Menu1">
          <MenuItem Header="Menu1A" />
          <MenuItem Header="Menu1B" />
        </MenuItem>
        <MenuItem Header="Menu2">
          <MenuItem Header="Menu2A" />
          <MenuItem Header="Menu2B" />
        </MenuItem>
        <MenuItem Header="Menu3">
          <MenuItem Header="Menu3A" />
          <MenuItem Header="Menu31B" />
        </MenuItem>
        <MenuItem Header="Help">
          <MenuItem Header="About"
                    Click="MenuItem_About_Click" />
        </MenuItem>
      </Menu>

      <DockPanel HorizontalAlignment="Stretch">
        <ToolBarTray DockPanel.Dock="Top"
                     IsLocked="True">
          <ToolBar BandIndex="1">
            <Button Click="MyToolBarButton1_Click">
              <Image Height="32"
                     Width="32"
                     Name="MyToolBarButton1" />
            </Button>
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyToolBarButton2" />
            </Button>
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyToolBarButton3" />
            </Button>
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyToolBarButton4" />
            </Button>
          </ToolBar>
          <ToolBar BandIndex="2">
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyToolBarButton5" />
            </Button>
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyToolBarButton6" />
            </Button>
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyToolBarButton7" />
            </Button>
          </ToolBar>
        </ToolBarTray>

        <ToolBarTray Style="{StaticResource ToolBarTrayVertical}"
                     DockPanel.Dock="Left"
                     Margin="0,1,0,0">
          <ToolBar BandIndex="1">
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyWorkflowBarButton1" />
            </Button>
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyWorkflowBarButton2" />
            </Button>
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyWorkflowBarButton3" />
            </Button>
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyWorkflowBarButton4" />
            </Button>
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyWorkflowBarButton5" />
            </Button>
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyWorkflowBarButton6" />
            </Button>
            <Button>
              <Image Height="32"
                     Width="32"
                     Name="MyWorkflowBarButton7" />
            </Button>
          </ToolBar>
        </ToolBarTray>

        <ScrollViewer DockPanel.Dock="Left"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
          <Button VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Click="HelloAswTemplate_Click">Hello ASW Template</Button>
        </ScrollViewer>

      </DockPanel>
    </DockPanel>

  </Grid>
</Window>
